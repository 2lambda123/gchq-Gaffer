                                <relocation>
                                    <pattern>org.json*</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.json*</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.aopalliance.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.aopalliance.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.hibernate.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.hibernate.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.net.</shadedPattern>
                                </relocation>
                                <relocation>
