    <build>
        <plugins>
            <!--
              ~ The later 2.22.0 onward versions of this plugin handle the setup of the AbstractStoreITs StoreTestSuite
              ~ test runner in a different way so the management of the StoreProperties results in the wrong
              ~ StoreProperties being supplied by the tests subclassed from AbstractStoreITs to the tests subclassed
              ~ from the AbstractStoreIT.
              ~ To get around this until such time as the whole JUnit4 / StoreTestSuite gets converted to JUnit 5 we
              ~ force the use of the JUnit4 failsafe plugin just for the accumulo tests.
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${failsafe.version}</version>
                <executions>
                    <execution>
                        <id>integration-test</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <skipITs>${skip.failsafe.tests}</skipITs>
                    <argLine>${failsafeArgLine}</argLine>
                    <excludes>
                        <exclude>**/*$*</exclude>
                        <exclude>**/performance/**</exclude>
                        <exclude>${exclude.tests}</exclude>
                    </excludes>
                    <includes>
                        <include>**/*IntegrationTest.java</include>
                        <include>**/*IT.java</include>
                        <include>**/*ITs.java</include>
                        <include>**/*IntegrationTests.java</include>
                    </includes>
                    <systemPropertyVariables>
                        <log4j.configuration>file:${project.build.testOutputDirectory}/log4j.xml</log4j.configuration>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${shade.plugin.version}</version>
                <executions>
                    <execution>
                        <id>shaded</id>
                        <phase>${shaded.jar.phase}</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                            <shadedClassifierName>shaded</shadedClassifierName>
                            <artifactSet>
                                <excludes>
                                    <exclude>uk.gov.gchq.gaffer:store</exclude>
                                    <exclude>uk.gov.gchq.gaffer:operation</exclude>
                                    <exclude>uk.gov.gchq.gaffer:graph</exclude>
                                    <exclude>uk.gov.gchq.gaffer:sketches-library</exclude>
                                    <exclude>uk.gov.gchq.gaffer:common-util</exclude>
                                    <exclude>uk.gov.gchq.gaffer:serialisation</exclude>
                                    <exclude>uk.gov.gchq.gaffer:data</exclude>
                                    <exclude>uk.gov.gchq.gaffer:core</exclude>
                                    <exclude>uk.gov.gchq.gaffer:access</exclude>
                                    <exclude>uk.gov.gchq.gaffer:cache</exclude>
                                    <exclude>uk.gov.gchq.koryphe:*</exclude>
                                    <exclude>org.slf4j:slf4j-reload4j</exclude>
                                    <exclude>ch.qos.reload4j:reload4j</exclude>
                                    <exclude>com.fasterxml.*:*</exclude>
                                </excludes>
                            </artifactSet>
                            <relocations>
                                <relocation>
                                    <pattern>com.google.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.com.google.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons.beanutils.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.apache.commons.beanutils.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons.cli.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.apache.commons.cli.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons.collections.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.apache.commons.collections.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons.collections4.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.apache.commons.collections4.</shadedPattern>
