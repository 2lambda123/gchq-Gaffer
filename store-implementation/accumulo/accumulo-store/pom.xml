                                </relocation>
                                <relocation>
                                    <pattern>javax.ws.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.javax.ws.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>javax.el.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.javax.el.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>javax.servlet.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.javax.servlet.</shadedPattern>
                                </relocation>
                                <relocation>
