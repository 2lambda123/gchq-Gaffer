                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons.lang3.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.apache.commons.lang3.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons.math3.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.apache.commons.math3.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons.net.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.apache.commons.net.</shadedPattern>
                                </relocation>
