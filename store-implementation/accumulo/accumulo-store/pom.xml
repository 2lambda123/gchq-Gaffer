                                </relocation>
                                <relocation>
                                    <pattern>org.checkerframework.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.checkerframework.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.fusesource.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.fusesource.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.objectweb.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.objectweb.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.jvnet.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.jvnet.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.xbill.</pattern>
                                    <shadedPattern>uk.gov.gchq.gaffer.accumulo.shaded.org.xbill.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.xerial.</pattern>
